}
.luckRoll .roll-item{
  font-size: 30px;
  /* padding: 0 .5em; */
  height: 30px;
  transition: all .4s;
}
.luckRoll .roll-item.selected{
  transform: scale(1.3,1.1);
}

.luckRoll .start{
    animation: moveup 2s  linear infinite;
}
.luckRoll .stop{
     animation-play-state: paused;
}
.luckRoll .restart {
  animation: moveup 2s  linear infinite;
}
@keyframes moveup{
    0% {
        transform: translateY(0);
    }
    100% {
        transform: translateY(-100%);
    }
}
.luck-box{
  width: 145px;
  position: relative;
}
.luck-border{
  height: 30px;
  width: 140px;
  margin-top: 4.5px;
  border: 3px solid red;
  position: absolute;
  z-index: 11;
}
.roll-wrap{
  width: 100%;
  text-align: center;
  position: absolute;
  top: 0;
  left:50%;
  transform: translateX(-50%);
  background: #ddd;
  opacity: .7;
}
.start-btn{
  margin-top: 30px;
