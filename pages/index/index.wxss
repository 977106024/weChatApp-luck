  margin-top: 20px;
  justify-content: space-between;
}
input{
  border:1px solid #ddd;
  margin-left: 15px;
}
input.disabled{
  background: #ddd;
}
.container{
  margin: 0 10px;
  padding: 0 20px;
}
.submit{
  margin-top: 30px;
}
.prizeNumber{
  margin-top: 20px;
}

.luckDraw{
  margin-top: 30px;
}
.luckDraw .loginNumber{
  color: #fff;
  font-size: 12px;
  position: absolute;
  top: 15px;
  left: 10px;
}
.luck-box{
  height: 211.5px;
  overflow: hidden;
  display:flex;
  justify-content: center;
  align-items: center;
}
.luckRoll .roll-item{
  color: #fff;
  font-size: 30px;
  height: 30px;
  transition: all .3s;
  opacity: .7;
}
.luckRoll .roll-item.selected{
  font-size: 33.5px;
  opacity: 1;
}
.luckRoll .roll-item.previous{
  font-size: 32px;
  opacity: .9;
}
.luckRoll .roll-item.next{
  font-size: 32px;
  opacity: .9;
}

.luckRoll .start{
    animation: moveup 2s  linear infinite;
}
.luckRoll .stop{
    animation-play-state: paused;
}
.luckRoll .restart {
  animation: moveup 2s  linear infinite;
}
@keyframes moveup{
    0% {
        transform: translateY(0);
    }
    100% {
        transform: translateY(-100%);
    }
}
.luck-box{
  width: 145px;
  position: relative;
  background: #409EFF;
}
.luck-border{
  height: 30px;
  width: 140px;
  margin-top: 4.5px;
  border: 1px solid white;
  border-radius: 5px;
  position: absolute;
  z-index: 11;
}
.roll-wrap{
  width: 100%;
  text-align: center;
  position: absolute;
  top: 0;
  left:50%;
  transform: translateX(-50%);
  /* background: #ddd; */
